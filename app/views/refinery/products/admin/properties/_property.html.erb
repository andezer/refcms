<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(property) -%>">
  <div class='clearfix'>
    <span class='title'>
      <%= property.title.presence || property.translations.detect {|t| t.title.present?}.title %>
      <span class="preview">
        <% property.translations.reject {|t| t.title.blank? }.each do |translation| %>
          <%= link_to refinery.edit_products_admin_property_path(property, :switch_locale => translation.locale),
                      :class => 'locale' do %>
            <div class="locale_icon <%= translation.locale %>">
              <%= refinery_icon_tag('locale-blue.svg', :size => '24x24') %>
              <span class="code"><%= translation.locale.upcase %></span>
            </div>
          <% end %>
        <% end %>
      </span>
    </span>

    <span class='actions'>
      <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_products_admin_property_path(property),
           :title => t('.edit') %>
      <%= link_to refinery_icon_tag("delete.png"), refinery.products_admin_property_path(property),
          :class => "cancel confirm-delete",
          :title => t('.delete'),
          :data => {:confirm => t('message', :scope => 'refinery.admin.delete', :title => property.title)},
          :method => :delete %>
    </span>
  </div>
</li>
